<h2>Welcome to Pizza Shop!</h2>
<br />
<br />
<div class="row">

	<% @products.each do |p| %>
	<div class="col-md-3">
		<div>
			<%= p.title %>
		</div>

		<div>
			<img src="<%= p.path_to_image %>" />
		</div>

		<div>
			<%= p.description %>
		</div>

		<div>
			Size: <%= p.size %> rub
		</div>

		<div>
			Price: <%= p.price %> rub
		</div>
		<br />
		<div>
			<button  class="btn btn-sm btn-success" onclick="add_to_cart()">Add to cart</button>
		</div>
	</div>
	<% end %>
</div>

